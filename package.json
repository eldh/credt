{
  "name": "rupp",
  "version": "0.0.0",
  "description": "My Project",
  "esy": {
    "build": "dune build -p <PACKAGE_NAME>",
    "buildDev": "pesy",
    "release": { "releasedBinaries": [ "RuppApp.exe" ] }
  },
  "buildDirs": {
    "test": {
      "require": [ "rupp.lib", "rely.lib" ],
      "main": "TestRupp",
      "name": "TestRupp.exe"
    },
    "library": { "name": "rupp.lib", "namespace": "Rupp" },
    "executable": {
      "require": [ "rupp.lib", "calendar" ],
      "main": "RuppApp",
      "name": "RuppApp.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestRupp.exe",
    "test-watch":
      "export TERM=xterm | fswatch -o ./test | xargs -n1 -I{} esy test"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/calendar": "2.04",
    "@opam/dune": ">=1.6.0",
    "@reason-native/rely": "^3.2.1",
    "ocaml": "^4.4.0"
  },
  "devDependencies": {
    "ocaml": "4.7.1004",
    "refmterr": "*",
    "pesy": "*",
    "@opam/merlin": "*"
  }
}